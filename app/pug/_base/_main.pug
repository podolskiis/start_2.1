doctype html
include _vars.pug
include ../_mixins/_mix-include.pug
html(lang="ru")
  head
    include _head.pug
  body.page(class=bodyClasses)
    if off_top
      include ../_section/_off-top.pug
    .page-wrap
      if header
        // HEADER START 
        include ../_section/_s-header.pug
        // HEADER END 
      if main
        // MAIN START 
        main.s-main
          block content
        // MAIN END 
      if footer
        // FOOTER START 
        include ../_section/_s-footer.pug
        // FOOTER END 
    if off_bot
      // MODALS START 
      .modals-wrap.hidden
        include ../_section/_off-bot.pug
      // MODALS END 
    include _script.pug
